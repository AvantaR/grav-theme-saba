<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
{# chargement de ~/partials/metadata.html.twig #}
    {% include 'partials/metadata.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png', true) }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

{# chargement des styles CSS #}
    {% block stylesheets %}
{# chargement des CSS Bootstrap 3.3.6 #}
    {% do assets.addCss('theme://css/bootstrap.min.css') %}
{# chargement des Custom CSS Saba #}
    {% do assets.add('theme://css/saba-custom.css',100) %}
{# chargement des Fontawesome 4.5.0 #}
    {% do assets.add('theme://css/font-awesome.min.css',101) %}
{# a vérifier--   
    {% do assets.addCss('theme://css/slidebars.min.css') %} 
#}
    {% endblock %}
    {{ assets.css() }}
<link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
{% endblock head%}
</head>
{# Début du body #}
<body>
    
{# intégration de ~partials/header.html.twig #}
        {% block header %}
            {% include 'partials/header.html.twig' %}
        {% endblock %}

{# intégration du showcase #}
    {% block showcase %}{% endblock %}

{# intégration du contenu ~/base.html.twig #}
        {% block body %}
            {% block content %}{% endblock %}
        {% endblock %}

{# intégration du footer ~/partials/footer.html.twig #}       
        {% block footer %}
            {% include 'partials/footer.html.twig' %}
        {% endblock %}

{# block bottom #}
    {% block bottom %} {% endblock %}
    
{# chargement des js #}
        {% block javascripts %}
            {% do assets.addJs('theme://js/bootstrap.min.js') %}
        {% endblock %}
        {{ assets.js() }}
	
</body>
</html>
